<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.selfroom.mappers.USerAppointmentMapper">
    <select id="getUSerAppointment" resultType="com.example.selfroom.bean.USerAppointment">
        SELECT * FROM test.reserveinformation  WHERE score = #{score}
    </select>
    <select id="getNoUSerAppointment" resultType="com.example.selfroom.bean.USerAppointment">
        SELECT * FROM test.reserveinformation  WHERE score = #{score} and used =-1
    </select>
    <delete id="deleNoUSerAppointment">
        delete  FROM test.reserveinformation  WHERE reservationNumber=#{Number}
    </delete>
    <select id="getoUSerAppointmentBynumber" resultType="com.example.selfroom.bean.USerAppointment">
        SELECT * FROM test.reserveinformation  WHERE reservationNumber=#{number}
    </select>
    <select id="countUSerAppointment" resultType="int">
        SELECT count(*) FROM test.reserveinformation  WHERE score = #{score}
    </select>
    <select id="countNoUSerAppointment" resultType="int">
        SELECT count(*) FROM test.reserveinformation  WHERE score = #{score} and used= -1
    </select>
</mapper>